<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_slidingmenu_left"
    android:orientation="vertical"
    android:paddingBottom="50dp"
    android:paddingLeft="20dp"
    android:paddingTop="20dp" >

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/biz_left_news" />

        <TextView
            style="@style/fragment_menu_left_textview1"
            android:text="新闻"
            android:layout_toRightOf="@id/iv1"/>

        <TextView
			style="@style/fragment_menu_left_textview2"
            android:text="NEWS"
            android:layout_toRightOf="@id/iv1"
            android:layout_alignBottom="@id/iv1"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/biz_left_favorite" />

        <TextView
            style="@style/fragment_menu_left_textview1"
            android:text="收藏"
            android:layout_toRightOf="@id/iv1"/>

        <TextView
			style="@style/fragment_menu_left_textview2"
            android:text="FAVORITE"
            android:layout_toRightOf="@id/iv1"
            android:layout_alignBottom="@id/iv1"
            />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/biz_left_local" />

        <TextView
            style="@style/fragment_menu_left_textview1"
            android:text="本地"
            android:layout_toRightOf="@id/iv1"/>

        <TextView
			style="@style/fragment_menu_left_textview2"
            android:text="LOCAL"
            android:layout_toRightOf="@id/iv1"
            android:layout_alignBottom="@id/iv1"
            />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/biz_left_comment" />

        <TextView
            style="@style/fragment_menu_left_textview1"
            android:text="跟帖"
            android:layout_toRightOf="@id/iv1"/>

        <TextView
			style="@style/fragment_menu_left_textview2"
            android:text="COMMENT"
            android:layout_toRightOf="@id/iv1"
            android:layout_alignBottom="@id/iv1"
            />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/biz_left_photo" />

        <TextView
            style="@style/fragment_menu_left_textview1"
            android:text="图片"
            android:layout_toRightOf="@id/iv1"/>

        <TextView
			style="@style/fragment_menu_left_textview2"
            android:text="PHOTO"
            android:layout_toRightOf="@id/iv1"
            android:layout_alignBottom="@id/iv1"
            />
    </RelativeLayout>
</LinearLayout>