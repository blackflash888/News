<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_slidingmenu_right"
    android:orientation="vertical"
    android:paddingBottom="60dp"
    android:paddingTop="40dp" 
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    >

    <RelativeLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:clickable="true">

        <ImageView
            android:id="@+id/login_iv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/right_lijidenglu" 
            />

        <TextView
            android:id="@+id/login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="立即登陆"
            android:textColor="@color/white"
            android:textSize="27dp" />
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        >
        
        <ImageView
            android:id="@+id/weixin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_weixin"
            android:layout_alignParentBottom="true" 
            android:layout_marginBottom="50dp" 
            android:clickable="true"
            />
        
        <ImageView
            android:id="@+id/qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_qq"
            android:layout_alignParentBottom="true" 
            android:layout_toRightOf="@id/weixin"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="50dp"
            android:clickable="true"
            />
        <ImageView
            android:id="@+id/fiends"
            android:layout_width="39dp"
            android:layout_height="39dp"
            android:src="@drawable/right_fiends"
            android:layout_alignParentBottom="true" 
            android:layout_toRightOf="@id/qq"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="50dp" 
            android:clickable="true"
            />
        <ImageView
            android:id="@+id/sinaweibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right_weibo"
            android:layout_alignParentBottom="true" 
            android:layout_toRightOf="@id/fiends"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="50dp"
            android:clickable="true"
            />
        
        <TextView
            android:id="@+id/update_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更新版本"
            android:textColor="@color/white"
            android:textSize="20dp" 
            android:layout_marginLeft="60dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="120dp"
            android:clickable="true"
            />
    </RelativeLayout>

</LinearLayout>